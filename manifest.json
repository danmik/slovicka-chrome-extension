{
  "manifest_version": 2,

  "name": "Slovíčka",
  "description": "Zobrazuje počet slovíček na opakování.",
  "version": "1.0",

  "permissions": [
	"http://www.engslovicka.eu/",
	"http://127.0.0.1:8000/",
	"tabs"
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-1.10.1.min.js; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "page": "background.html",
	"persistent": true
  }
}