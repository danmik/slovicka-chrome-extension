{
  "manifest_version": 2,

  "name": "Slovíčka Checker",
  "description": "Zobrazuje počet slovíček na opakování.",
  "version": "1.1",

  "permissions": [
    "http://www.engslovicka.eu/",
    "alarms"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}